<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAgenda.Pages.ConfirmaAgendamentoPage">
    <ContentPage.Content>
        <StackLayout Padding="30">
            <Label Text="Confirmar agendamento?"
                   HorizontalTextAlignment="Center" 
                   FontSize="20"
                   Margin="0,0,0,20" />
            <Label x:Name="lServico"  HorizontalTextAlignment="Center" />
            <Label x:Name="lDescricao"  HorizontalTextAlignment="Center"/>
            <Label x:Name="lData" HorizontalTextAlignment="Center" />
            <Label x:Name="lDuracao" HorizontalTextAlignment="Center" />
            <Label x:Name="lValor" HorizontalTextAlignment="Center" />
            <Button Text="Agendar"
                    Clicked="OnButtonClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>