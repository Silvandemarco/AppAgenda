<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAgenda.Pages.ConfirmaAgendamentoPage"
             Title="Confirmar agendamento?" >
    <ContentPage.Content>
        <StackLayout Padding="30">
            <StackLayout VerticalOptions="CenterAndExpand">
                <!--<Label Text="Confirmar agendamento?"
                       HorizontalTextAlignment="Center" 
                       FontSize="20"
                       Margin="0,0,0,20" />-->
                <Label x:Name="lDescricao"  HorizontalTextAlignment="Center" TextColor="#3C3C3C" FontSize="20" />
                <Label x:Name="lData" HorizontalTextAlignment="Center" TextColor="#869EAC" FontSize="18" />
                <Label x:Name="lHora" HorizontalTextAlignment="Center" TextColor="#869EAC" FontSize="18" />
                <Label x:Name="lDuracao" HorizontalTextAlignment="Center" TextColor="#869EAC" FontSize="18" />
                <Label x:Name="lValor" HorizontalTextAlignment="Center" TextColor="#869EAC" FontSize="18" />
            </StackLayout>
            <StackLayout VerticalOptions="End">
                <Button Text="Agendar" Clicked="OnButtonClicked" Style="{StaticResource Button}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>